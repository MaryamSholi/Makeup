@using Makeup.ViewModel
@model BrandVM

@section Title {
Brands
}
@section SubTitle
{
	@(Model?.Id == null ? "Create" : "Edit")
}


<form asp-controller="Brand">
	<div class="card-body">
		<div class="form-group">
			<label asp-for="Name"></label>
			<input type="text" class="form-control" asp-for="Name" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>
	<div class="card-footer">
		<button type="submit" class="btn btn-primary">@(Model?.Id == null ? "ADD" : "UPDATE")</button>
	</div>

</form>
