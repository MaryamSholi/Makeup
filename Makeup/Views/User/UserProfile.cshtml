@using Makeup.ViewModel
@model ApplicationUserVM

@section Title {
Profile
}

<div class="card-body box-profile">
	<div class="text-center">
		<img class="profile-user-img img-fluid img-circle" src="~/img/User/user.jpg" alt="User profile picture">
	</div>
	<h3 class="profile-username text-center">@User.Identity.Name</h3>
	<p class="text-muted text-center">@Model.Email</p>
	<ul class="list-group list-group-unbordered mb-3">
		<li class="list-group-item">
			<b>Email: </b> <a class="m-3">@Model.Email</a>
		</li>
		<li class="list-group-item">
			<b>Phone: </b> <a class="m-3">@Model.PhoneNumber</a>
		</li>
		<li class="list-group-item">
			<b>Address: </b> <a class="m-3">@Model.Address</a>
		</li>


	</ul>
	<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
		<button type="submit" class="btn btn-primary btn-block">Logout</button>
	</form>
</div>